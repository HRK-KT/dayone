<!DOCTYPE html>
<html>
  <head>
    <title>Dayone</title>
    <%= include_gon %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%# <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %> 
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' %>

  </head>

  <body>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>

   <header class="header">
      <div class="header__bar row">
        <h1 class="grid-6"><a class="title", href="/">まだ未完成だからさわるな</a></h1>
        <div class="side-box">
          <% if user_signed_in? %>
            <div class="user_nav grid-6">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete,class: "btn" %>
            </div>
          <% else %>
            <div class="grid-6 login_signup">
              <%= link_to "ログイン", new_user_session_path, class: "post btn" %>
              <%= link_to "新規登録", new_user_registration_path, class: "post btn" %>
            </div>
          <% end %>
          <% if user_signed_in? %>
            <div class="navibox">
              <input type="checkbox" id="navTgl">
              <label for="navTgl" class="open label-menu"><span></span></label>
              <label for="navTgl" class="close label-menu"></label>
              <nav class="menu">
                <h2>メニュー</h2>
                <ul>
                  <li><%= link_to 'お題の新規投稿' , new_theme_path %></li>
                  <li><%= link_to '投稿したお題一覧' , themes_path %></li>
                  <li><%= link_to '回答一覧' , answers_path %></li>
                  <li><%= link_to 'マイページ', user_path(current_user) %></li>
                  <li><%= link_to 'フレンドリスト', user_friends_path %></li>
                  <li><%= link_to 'トークルーム', groups_path %></li>
                </ul>
              </nav>
            </div>  
          <% end %>   
        </div>
      </div> 
    </header>
    <%= yield %>
  </body>
</html>
