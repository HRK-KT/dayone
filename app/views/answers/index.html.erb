<% @answers.each do |answer| %>
  <% @themes.each do |theme| %> 
    <% if theme.id == answer.theme_id %>
    お題：<%= theme.title %>
      <% if answer.answer == "answer1" %>       
        あなたの答え：<%= theme.answer1 %>
      <% elsif answer.answer == "answer2" %>
        あなたの答え：<%= theme.answer2 %>
      <% end %>
      <%= link_to "詳細確認", answer_path(answer.id) %>
    <% end %>
    
  <% end %>
<% end %>